<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/kertas_judul"
        app:layout_constraintRight_toRightOf="parent"
        android:rotation="345"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/kertas_color"
        android:textSize="35sp"
        android:fontFamily="@font/comicz"
        android:text="@string/kertas_txt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:rotation="345"
        app:layout_constraintTop_toBottomOf="@+id/kertas_judul"
        android:fontFamily="@font/comicz"
        android:textSize="35sp"
        android:id="@+id/gunting_judul"
        android:textColor="@color/gunting_color"
        android:text="@string/gunting_txt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:rotation="345"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@+id/gunting_judul"
        android:fontFamily="@font/comicz"
        android:textColor="@color/batu_color"
        android:text="@string/batu_txt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_txt"
        android:textStyle="bold"
        android:textColor="@color/txt"
        android:layout_marginStart="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/pemain_satu_text_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/comicz"
        tools:ignore="MissingConstraints"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/batu"
        android:id="@+id/tv_batu"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pemain_satu_text_view"
        tools:ignore="InvalidId,MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/kertas"
        app:layout_constraintTop_toBottomOf="@+id/tv_batu"
        android:id="@+id/tv_kertas_btn"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/gunting"
        app:layout_constraintTop_toBottomOf="@+id/tv_kertas_btn"
        android:id="@+id/tv_gunting"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/com_txt"
        android:textStyle="bold"
        android:fontFamily="@font/comicz"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/com_text_view"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/txt"
        android:layout_marginTop="250dp"
        tools:ignore="MissingConstraints"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/batu"
        android:id="@+id/tv_batu_com"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/com_text_view"
        tools:ignore="InvalidId,MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/kertas"
        app:layout_constraintTop_toBottomOf="@+id/tv_batu_com"
        android:id="@+id/tv_kertas_com_btn"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/gunting"
        app:layout_constraintTop_toBottomOf="@+id/tv_kertas_com_btn"
        android:id="@+id/tv_gunting_com"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vs_txt"
        android:rotation="345"
        android:id="@+id/text_view_one_vs"
        android:textColor="@color/red_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/comicz"
        android:textSize="90sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        android:id="@+id/ref_btn"
        android:layout_marginBottom="10dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>