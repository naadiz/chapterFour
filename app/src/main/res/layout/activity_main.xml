<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/paper"
        app:layout_constraintRight_toRightOf="parent"
        android:rotation="345"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/kertas_color"
        android:textSize="35sp"
        android:fontFamily="@font/comicz"
        android:text="@string/kertas_txt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:rotation="345"
        app:layout_constraintTop_toBottomOf="@id/paper"
        android:fontFamily="@font/comicz"
        android:textSize="35sp"
        android:id="@+id/scissors"
        android:textColor="@color/gunting_color"
        android:text="@string/gunting_txt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:rotation="345"
        android:textSize="35sp"
        android:id="@+id/batu_text"
        app:layout_constraintTop_toBottomOf="@+id/scissors"
        android:fontFamily="@font/comicz"
        android:textColor="@color/batu_color"
        android:text="@string/batu_txt"
        tools:ignore="InvalidId" />


</androidx.constraintlayout.widget.ConstraintLayout>